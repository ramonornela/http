{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "types" : ["jasmine"]
  },
  "include": [
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "skipTemplateCodegen": true,
    "debug": false
  }
}
