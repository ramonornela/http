{
  "name": "@ramonornela/http",
  "version": "0.0.33",
  "description": "Requisição HTTP através de eventos com adição de plugins para interceptação",
  "main": "dist/umd/index.js",
  "typings": "dist/esm/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:umd && npm run build:esm",
    "build:qa": "npm run lint && npm run test && npm run build",
    "build:esm": "ngc -p tsconfig-esm.json",
    "build:test": "ngc -p tsconfig-test.json",
    "build:umd": "ngc",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "git-cz",
    "clean": "rimraf ./dist",
    "cover": "nyc report --reporter=lcov npm test",
    "doc": "typedoc --tsconfig tsconfig-esm.json --options typedoc.json src/",
    "gh:release": "node ./scripts/git-release",
    "jasmine": "jasmine JASMINE_CONFIG_PATH=test/jasmine-config.json",
    "lint": "tslint -c ./tslint.json --project ./tsconfig-esm.json",
    "nightly": "npm run build:qa && node ./scripts/publish-nightly",
    "prepush": "npm run lint",
    "package:json": "node ./scripts/package-publish",
    "publishPackage": "npm run build:qa && npm run package:json --prepare && npm publish --access public && npm run package:json --restore",
    "test": "npm run clean && npm run build:test && npm run jasmine"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@angular/common": "2.2.1",
    "@angular/core": "2.2.1",
    "@angular/http": "2.2.1",
    "@angular/forms": "2.2.1",
    "@angular/platform-browser-dynamic": "2.2.1",
    "@angular/platform-server": "2.2.1",
    "@angular/platform-browser": "2.2.1",
    "@angular/compiler": "2.2.1",
    "@angular/compiler-cli": "2.2.1",
    "@ramonornela/configuration": "nightly",
    "@ramonornela/url-resolver": "nightly",
    "@ramonornela/jsonpath": "0.2.10",
    "@types/jasmine": "2.2.33",
    "codelyzer": "1.0.0-beta.3",
    "commitizen": "^2.8.6",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "fluid-publish": "1.1.0",
    "github": "0.2.4",
    "husky": "^0.11.9",
    "jasmine": "2.5.2",
    "nyc": "10.0.0",
    "reflect-metadata": "0.1.8",
    "rimraf": "^2.5.4",
    "rxjs": "5.0.0-beta.12",
    "tslint": "3.15.1",
    "tslint-eslint-rules": "1.5.0",
    "tslint-ionic-rules": "0.0.8",
    "typedoc": "^0.5.1",
    "typescript": "2.0.9",
    "zone.js": "^0.6.21"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/http": "^2.0.0",
    "@ramonornela/url-resolver": "^0.0.24",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonornela/http.git"
  },
  "keywords": [
    "ionic",
    "angular",
    "url",
    "http",
    "headers",
    "get",
    "post"
  ],
  "author": "Ramon Ornelas <ramon.ornela@gmail.com>",
  "contributors": [
    "Julio Lemes <juliolemesti@gmail.com>",
    "Michael Nishikawa <michael.xd@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramonornela/http/issues"
  },
  "homepage": "https://github.com/ramonornela/http",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
