{
  "name": "@ramonornela/http",
  "version": "0.0.20",
  "description": "Requisição HTTP através de eventos com adição de plugins para interceptação",
  "main": "dist/umd/index.js",
  "typings": "dist/esm/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "tslint -c ./tslint.json --project ./tsconfig-esm.json --force",
    "package:json": "node ./scripts/package",
    "build:umd": "tsc -p tsconfig.json && ngc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig-esm.json && ngc -p tsconfig-esm.json",
    "build": "npm run clean && npm run build:umd && npm run build:esm",
    "build:lint": "npm run lint && npm run build",
    "publishPackage": "npm run build:lint && npm run package:json --prepare && npm publish --access public && npm run package:json --restore"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@angular/common": "2.1.2",
    "@angular/core": "2.1.2",
    "@angular/http": "2.1.2",
    "@angular/forms": "2.1.2",
    "@angular/platform-browser-dynamic": "2.1.2",
    "@angular/platform-server": "2.1.2",
    "@angular/platform-browser": "2.1.2",
    "rxjs": "5.0.0-beta.12",
    "@ramonornela/configuration": "^0.0.3",
    "@ramonornela/url-resolver": "^0.0.9"
  },
  "devDependencies": {
    "@angular/compiler": "2.1.2",
    "@angular/compiler-cli": "2.1.2",
    "zone.js": "^0.6.21",
    "typescript": "^2.0.6",
    "tslint": "3.15.1",
    "tslint-eslint-rules": "1.5.0",
    "tslint-ionic-rules": "0.0.8",
    "rimraf": "^2.5.4"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/http": "^2.0.0",
    "@ramonornela/url-resolver": "^0.0.9",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonornela/http.git"
  },
  "keywords": [
    "ionic",
    "angular",
    "url",
    "http",
    "headers",
    "get",
    "post"
  ],
  "author": "Ramon Ornelas <ramon.ornela@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramonornela/http/issues"
  },
  "homepage": "https://github.com/ramonornela/http"
}
